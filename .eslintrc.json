{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error",  4],
        "max-len": ["error", { "code": 200, "tabWidth": 4 } ],
        "no-param-reassign": [ 2, { "props": false } ]
    }
}